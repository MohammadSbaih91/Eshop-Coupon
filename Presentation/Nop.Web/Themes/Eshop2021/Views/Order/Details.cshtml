                                            {
                                                var ratingPercent = 0;
                                                if (item.ReviewOverviewModel.TotalReviews != 0)
                                                {
                                                    ratingPercent = ((item.ReviewOverviewModel.RatingSum * 100) / item.ReviewOverviewModel.TotalReviews) / 5;
                                                }
                                                <div class="product-review-box" title="@string.Format(T("Reviews.TotalReviews").Text, item.ReviewOverviewModel.TotalReviews)">
                                                    <p>@T("OrderDetail.ProductRateText")</p>
                                                    @*<div class="rating">*@
                                                    @*<a href="@Url.RouteUrl("ProductReviews", new {productId = item.ProductId})">*@
                                                    @*<div style="width: @(ratingPercent)%">
                                                        </div>*@
                                                    <a class="rating" style="width: 2.5vh; cursor:pointer;" onclick="productRatingsave(1, @item.ProductId)">
                                                    </a>
                                                    <a class="rating" style="width: 2.5vh; cursor:pointer;" onclick="productRatingsave(2, @item.ProductId)">
                                                    </a>
                                                    <a class="rating" style="width: 2.5vh; cursor:pointer;" onclick="productRatingsave(3, @item.ProductId)">
                                                    </a>
                                                    <a class="rating" style="width: 2.5vh; cursor:pointer;" onclick="productRatingsave(4, @item.ProductId)">
                                                    </a>
                                                    <a class="rating" style="width: 2.5vh; cursor:pointer;" onclick="productRatingsave(5, @item.ProductId)">
                                                    </a>
                                                    @*</a>*@
                                                    @*</div>*@
                                                    <div class="review-count">(@item.ReviewOverviewModel.TotalReviews)</div>
                                                </div>
                                                <script>
                                                    function productRatingsave(ratingValue, productId)
                                                    {
                                                        $.ajax({
                                                            url: '@Url.RouteUrl("AddProductReview")',
                                                            data: { ratingValue: ratingValue, productId: productId },
                                                            type: 'POST',
                                                            success: function (data) {
                                                                if (data.result == true && data.isApproved == true) {
                                                                    alert(data.message)
                                                                }
                                                                if (data.result == true && data.isApproved == false) {
                                                                    alert(data.message)
                                                                }
                                                                else if (data.result == false) {
                                                                    window.location = data.redirectUrl;
                                                                }
                                                            }
                                                        });
                                                    }
                                                </script>
