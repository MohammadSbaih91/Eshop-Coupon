@model WishlistEmailAFriendModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.WishlistEmailAFriend").Text);
    //page class
    Html.AppendPageCssClassParts("html-email-a-friend-page");
}
<div class="page email-a-friend-page">
    <div class="container">
        <div class="page-title">
            <h1>@T("Wishlist.EmailAFriend.Title")</h1>
        </div>
        <div class="page-body">
            @if (Model.SuccessfullySent)
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            else
            {
                <form asp-route="EmailWishlist" method="post">
                    <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    <div class="fieldset">
                        <div class="form-fields">
                            <div class="row justify-content-md-center">
                                <div class="col-lg-7 col-md-10">
                                    <div class="inputs form-group row">
                                        <label class="col-md-3 col-form-label" asp-for="FriendEmail" asp-postfix=":"></label>
                                        <div class="col-md-9 col-12">
                                            <input class="form-control" asp-for="FriendEmail" class="friend-email" placeholder="@T("Wishlist.EmailAFriend.FriendEmail.Hint")" />
                                            <span asp-validation-for="FriendEmail"></span>
                                        </div>
                                    </div>
                                    <div class="inputs form-group row">
                                        <label class="col-md-3 col-form-label" asp-for="YourEmailAddress" asp-postfix=":"></label>
                                        <div class="col-md-9 col-12">
                                            <input class="form-control" asp-for="YourEmailAddress" class="your-email" placeholder="@T("Wishlist.EmailAFriend.YourEmailAddress.Hint")" />
                                            <span asp-validation-for="YourEmailAddress"></span>
                                        </div>
                                    </div>
                                    <div class="inputs form-group row">
                                        <label class="col-md-3 col-form-label" asp-for="PersonalMessage" asp-postfix=":"></label>
                                        <div class="col-md-9 col-12">
                                            <input class="form-control" asp-for="PersonalMessage" class="personal-message" placeholder="@T("Wishlist.EmailAFriend.PersonalMessage.Hint")" />
                                            <span asp-validation-for="PersonalMessage"></span>
                                        </div>
                                    </div>
                                    @if (Model.DisplayCaptcha)
                                    {
                                        <div class="form-group row">
                                            <div class="col-md-3"></div>
                                            <div class="col-md-9 col-12">
                                                <div class="captcha-box">
                                                    <nop-captcha />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="buttons">
                        <input type="submit" name="send-email" class="button-1 send-email-a-friend-button btn btn-primary" value="@T("Wishlist.EmailAFriend.Button")" />
                    </div>
                </form>
            }
        </div>
    </div>
</div>
