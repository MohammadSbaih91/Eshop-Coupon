@model ShoppingCartModel.GiftCardBoxModel
@if (Model.Display)
{
    <div class="giftcard-box dis-shadow">
        <div class="code-flex">
            <div class="code-title gift-icon">
                @T("ShoppingCart.GiftCardCouponCode")
            </div>
            <div class="coupon-code flex">
                <input name="giftcardcouponcode" placeholder="@T("ShoppingCart.GiftCardCouponCode.Tooltip")" id="giftcardcouponcode" type="text" class="gift-card-coupon-code form-control" aria-label="@T("ShoppingCart.GiftCardCouponCode.Label")" />
                <input type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode"
                       value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="button-2 btn apply-gift-card-coupon-code-button" />
            </div>
        </div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="@(Model.IsApplied ? "message-success" : "message-failure")">
                    @Model.Message
                </div>
            }
        </div>
    <script asp-location="Footer">
        $(document).ready(function () {
            $('#giftcardcouponcode').on('keydown', function (event) {
                if (event.keyCode == 13) {
                    $('#applygiftcardcouponcode').trigger("click");
                    return false;
                }
            });
        });
    </script>
}