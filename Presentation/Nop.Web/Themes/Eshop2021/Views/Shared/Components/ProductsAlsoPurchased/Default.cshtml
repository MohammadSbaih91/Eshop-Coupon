@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid product-grid">
        <div class="title">
            <strong>@T("Products.AlsoPurchased")</strong>
        </div>
        <div class="item-grid">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="item-box col-lg-3 col-md-4 col-sm-6">@await Html.PartialAsync("_ProductBox", item)</div>
                }
            </div>
        </div>
    </div>
}