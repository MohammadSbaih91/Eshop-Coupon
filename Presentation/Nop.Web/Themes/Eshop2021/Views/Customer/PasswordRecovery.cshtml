@model PasswordRecoveryModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
<div class="page password-recovery-page">
    <div class="container">
        <div class="page-title">
            <h1>@T("Account.PasswordRecovery")</h1>
        </div>
        <div class="page-body">
            @if (!string.IsNullOrEmpty(Model.Result))
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            <form asp-route="PasswordRecovery" method="post">
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <p class="tooltip">@T("Account.PasswordRecovery.Tooltip")</p>
                <div class="fieldset">
                    <div class="form-fields">
                        <div class="row justify-content-md-center">
                            <div class="col-lg-7 col-md-10">
                                <div class="inputs form-group row">
                                    <label class="col-md-3 col-form-label" asp-for="Email" asp-postfix=":"></label>
                                    <div class="col-md-8 col-12">
                                        <input asp-for="Email" class="email form-control" />
                                        <span asp-validation-for="Email"></span>
                                        <nop-required />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <div class="col-lg-7 col-md-10">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-8 col-12">
                                <div class="buttons">
                                    <input type="submit" name="send-email" class="button-1 password-recovery-button btn btn-primary" value="@T("Account.PasswordRecovery.RecoverButton")" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>