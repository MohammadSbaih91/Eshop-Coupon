@model TopicMoveModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("Forum.PageTitle.MoveTopic").Text);
    //page class
    Html.AppendPageCssClassParts("html-move-topic-page");
}
@await Component.InvokeAsync("ForumBreadcrumb", new { forumTopicId = Model.Id })
<div class="page move-topic-page">
    <div class="page-title">
        <h1>@T("Forum.MoveTopic")</h1>
    </div>
    <div class="page-body">
        <form asp-route="TopicMove" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="fieldset">
                <div class="form-fields">
                    <div class="row">
                        <div class="col-lg-5 col-md-10">
                            <div class="inputs form-group row">
                                <label class="col-lg-12 col-form-label">@T("Forum.SelectTheForumToMoveTopic"):</label>
                                <div class="col-lg-12">
                                    <select class="custom-select" asp-for="ForumSelected" asp-items="@(new SelectList(Model.ForumList, "Value", "Text"))"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="buttons">
                <input type="submit" value="@T("Forum.Submit")" class="button-1 submit-forum-topic-button btn btn-primary" />
                <input type="button" class="button-2 cancel-forum-topic-button btn btn-secondary" value="@T("Forum.Cancel")" onclick="setLocation('@Url.RouteUrl("TopicSlug", new {id = Model.Id, slug = Model.TopicSeName})', event)" />
            </div>
        </form>
    </div>
</div>