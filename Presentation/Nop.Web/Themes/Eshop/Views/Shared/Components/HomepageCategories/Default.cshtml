@using Nop.Core
@using Nop.Web.Framework.UI
@inject IThemeContext themeContext
@inject IWorkContext workContext
@model IList<CategoryModel>
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/owl.carousel.css");
    Html.AppendScriptParts(ResourceLocation.Footer, $"~/Themes/{themeName}/Content/script/owl.carousel.min.js");
}
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="bg-color-full"></div>
        <div class="cat-title">
            <p>@T("HomePage.Category.Title.Description")</p>
            <h2><strong>@T("HomePage.Category.Title")</strong></h2>
        </div>
        <div class="item-grid owl-carousel">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">
                        <h2 class="title">
                            <a href="@UrlStrucutre.UrlDecode(Url.RouteUrl("Category", new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                @item.Name
                            </a>
                        </h2>
                        <div class="picture">
                            <a href="@UrlStrucutre.UrlDecode(Url.RouteUrl("Category", new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>
                        </div>
                        <a class="explore" href="@UrlStrucutre.UrlDecode(Url.RouteUrl("Category", new { SeName = item.SeName }))" title="@item.PictureModel.Title">
                            @T("HomePage.Category.Item.Exploremore")
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (supportRtl)
    {
        <script type="text/javascript" asp-location="Footer">
            $(document).ready(function () {

                $('.owl-carousel').owlCarousel({
                    loop: false,
                    items: 2,
                    margin: 15,
                    rtl:true,
                    responsive: {
                        0: {
                            items: 4,
                            dots: true,
                            center: true,
                            loop: true,
                            autoWidth: true,
                        },
                        767: {
                            loop: true,
                            items: 3,
                            dots: true,
                            center: true,
                            autoWidth: true,
                        },
                        1000: {
                            nav: true,
                            items: 4,
                        },
                        1400: {
                            nav: true,
                            items: 4,
                        }
                    }
                });
            });
        </script>
    }
    else
    {
        <script type="text/javascript" asp-location="Footer">
            $(document).ready(function () {
                $('.owl-carousel').owlCarousel({
                    loop: false,
                    items: 2,
                    margin: 15,
                    responsive: {
                        0: {
                            items: 4,
                            dots: true,
                            center: true,
                            loop: true,
                            autoWidth: true,
                        },
                        767: {
                            loop: true,
                            items: 3,
                            dots: true,
                            center: true,
                            autoWidth: true,
                        },
                        1000: {
                            nav: true,
                            items: 4,
                        },
                        1400: {
                            nav: true,
                            items: 4,
                        }
                    }
                });
            });
        </script>
    }
}
