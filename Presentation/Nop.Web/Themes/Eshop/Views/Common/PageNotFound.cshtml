@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PageNotFound").Text);
    //page class
    Html.AppendPageCssClassParts("html-not-found-page");
}

<style>
/* Note: Topic page doesn't support css. so keeping this style here to not duplicate it for rtl*/
    .not-found-page .topic-block-body{
           display: flex;
           justify-content: start;
           flex-wrap: wrap;
           text-align: start;
           line-height: initial;
           margin: 30px 0;
       }
       
       .img-confused{
           display: inline-block;
           flex: 1 1 1%;
       }
       .err-code{
           display: inline-block;
           vertical-align: top;
           font-size: 16px;
           text-align: start;
           flex: 1 1 45%;
           min-width: 290px;
       }
       .err-code a{
           color: #F16E00;
       }
        .err-code h1{
           font-size: 11.5vw;
           color: #F16E00;
       }
       .err-code p {
           font-weight: bold;
           margin: 0;
       }
       .second-para{
           font-weight: bold;
           margin: 10px 0;
       }
    
</style>
<div class="page not-found-page">
    <div class="page-body">
    @await Component.InvokeAsync("TopicBlock", new { systemName = "PageNotFound" })
    </div>
</div>