@model PackageProductModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />
<div class="panel-group">
    <div class="panel panel-default">
        <div class="form-group">
            <div class="col-md-4">
                <nop-label asp-for="SelectedDiscountIds" />
            </div>
            <div class="col-md-8">
                <nop-select asp-for="SelectedDiscountIds" asp-items="Model.AvailableDiscounts" asp-multiple="true" />
                <script>
                    $(document).ready(function () {
                        var discountIdsInput = $('#@Html.IdFor(model => model.SelectedDiscountIds)').data("kendoMultiSelect");
                        discountIdsInput.setOptions({
                            autoClose: false,
                            filter: "contains"
                        });

                                        @if (Model.AvailableDiscounts.Count == 0)
                                        {
                                    <text>
                        discountIdsInput.setOptions({
                            enable: false,
                            placeholder: '@T("Admin.Catalog.Products.Fields.Categories.NoCategoriesAvailable")'
                        });
                        discountIdsInput._placeholder();
                        discountIdsInput._enable();
                                        </text>
                                            }
                                        });
                </script>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="DisplayOrder" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="DisplayOrder" />
                <span asp-validation-for="DisplayOrder"></span>
            </div>
        </div>
    </div>
</div>