@model Nop.Plugin.Payments.Eskadenia.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentEskadenia" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="MerchantCode_OverrideForStore" asp-input="MerchantCode" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="MerchantCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="MerchantCode" />
                        <span asp-validation-for="MerchantCode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="ChannelCode_OverrideForStore" asp-input="ChannelCode" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="ChannelCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ChannelCode" />
                        <span asp-validation-for="ChannelCode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="PSP_OverrideForStore" asp-input="PSP" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="PSP" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="PSP" />
                        <span asp-validation-for="PSP"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="APIEndPoint" />
                    </div>
                    <div class="col-md-9">
                        <label>@Model.APIEndPoint</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="CallBackURL" />
                    </div>
                    <div class="col-md-9">
                        <label>@Model.CallBackURL</label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>