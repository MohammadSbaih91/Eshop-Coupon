@model AccordinglyModel

@inject IEventPublisher eventPublisher

<div asp-validation-summary="All"></div>
<input asp-for="SliderGroupId" type="hidden" />
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-popup">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-2">
                            <nop-label asp-for="DisplayOrder" />
                        </div>
                        <div class="col-md-10">
                            <nop-editor asp-for="DisplayOrder" />
                            <span asp-validation-for="DisplayOrder"></span>
                        </div>
                    </div>
                    @(Html.LocalizedEditor<AccordinglyModel, AccordinglyModelLocalizedModel>("accordingly-localized",
                        @<div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].PictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.Locales[item].PictureId" />
                                    <span asp-validation-for="@Model.Locales[item].PictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].MobilePictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.Locales[item].MobilePictureId" />
                                    <span asp-validation-for="@Model.Locales[item].MobilePictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].TabletPictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.Locales[item].TabletPictureId" />
                                    <span asp-validation-for="@Model.Locales[item].TabletPictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <nop-label asp-for="@Model.Locales[item].Html" />
                                </div>
                                <div class="col-md-10">
                                    <nop-editor asp-for="@Model.Locales[item].Html" asp-template="RichEditor" />
                                    <span asp-validation-for="@Model.Locales[item].Html"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].Position" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="@Model.Locales[item].Position" asp-items="@Model.Locales[item].AvailablePositions" />
                                    <span asp-validation-for="@Model.Locales[item].Position"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].Alignment" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="@Model.Locales[item].Alignment" asp-items="@Model.Locales[item].AvailableAlignments" />
                                    <span asp-validation-for="@Model.Locales[item].Alignment"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Locales[item].ClickToAction" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="@Model.Locales[item].ClickToAction" />
                                    <span asp-validation-for="@Model.Locales[item].ClickToAction"></span>
                                </div>
                            </div>
                            <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                        </div>
                    ,
                        @<div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="PictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="PictureId" />
                                    <span asp-validation-for="PictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="MobilePictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="MobilePictureId" />
                                    <span asp-validation-for="MobilePictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="TabletPictureId" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="TabletPictureId" />
                                    <span asp-validation-for="TabletPictureId"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    <nop-label asp-for="Html" />
                                </div>
                                <div class="col-md-10">
                                    <nop-editor asp-for="Html" asp-template="RichEditor" />
                                    <span asp-validation-for="Html"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="Position" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="Position" asp-items="Model.AvailablePositions" />
                                    <span asp-validation-for="Position"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="Alignment" />
                                </div>
                                <div class="col-md-9">
                                    <nop-select asp-for="Alignment" asp-items="Model.AvailableAlignments" />
                                    <span asp-validation-for="Alignment"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="ClickToAction" />
                                </div>
                                <div class="col-md-9">
                                    <nop-editor asp-for="ClickToAction" />
                                    <span asp-validation-for="ClickToAction"></span>
                                </div>
                            </div>
                        </div>
                    ))
                    <div class="form-group">
                        <div class="col-md-2">
                            &nbsp;
                        </div>
                        <div class="col-md-10">
                            <button type="submit" id="add-Image" name="add-Image" class="btn bg-blue">
                                <i class="fa fa-floppy-o"></i>
                                @T("Admin.Common.Save")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
