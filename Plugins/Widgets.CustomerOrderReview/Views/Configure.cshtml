@model Widgets.CustomerOrderReview.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
    var searchModel = new CustomerOrderReviewSearchModel();
    searchModel.SetGridPageSize();
}
@using Widgets.CustomerOrderReview.Models
<form asp-controller="CustomerOrderReview" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                @T("Plugins.CustomerOrderReview.HeadLine")
            </div>
            <div class="panel-body">
                @(Html.LocalizedEditor<ConfigurationModel, ConfigurationModel.ConfigurationLocalizedModel>("plugin-settings-localized",
                      @<div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="@Model.Locales[item].Rating1"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="@Model.Locales[item].Rating1"/>
                                  <span asp-validation-for="@Model.Locales[item].Rating1"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="@Model.Locales[item].Rating2"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="@Model.Locales[item].Rating2"/>
                                  <span asp-validation-for="@Model.Locales[item].Rating2"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="@Model.Locales[item].Rating3"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="@Model.Locales[item].Rating3"/>
                                  <span asp-validation-for="@Model.Locales[item].Rating3"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="@Model.Locales[item].Rating4"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="@Model.Locales[item].Rating4"/>
                                  <span asp-validation-for="@Model.Locales[item].Rating4"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="@Model.Locales[item].Feedback"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="@Model.Locales[item].Feedback"/>
                                  <span asp-validation-for="@Model.Locales[item].Feedback"></span>
                              </div>
                          </div>
                          <input type="hidden" asp-for="@Model.Locales[item].LanguageId"/>
                      </div>,
                      @<div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="Rating1"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="Rating1"/>
                                  <span asp-validation-for="Rating1"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="Rating2"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="Rating2"/>
                                  <span asp-validation-for="Rating2"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="Rating3"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="Rating3"/>
                                  <span asp-validation-for="Rating3"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="Rating4"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="Rating4"/>
                                  <span asp-validation-for="Rating4"></span>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-md-3">
                                  <nop-label asp-for="Feedback"/>
                              </div>
                              <div class="col-md-9">
                                  <nop-editor asp-for="Feedback"/>
                                  <span asp-validation-for="Feedback"></span>
                              </div>
                          </div>
                      </div>,
                      false))
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@await Html.PartialAsync("~/Plugins/Widgets.CustomerOrderReview/Views/List.cshtml", searchModel)