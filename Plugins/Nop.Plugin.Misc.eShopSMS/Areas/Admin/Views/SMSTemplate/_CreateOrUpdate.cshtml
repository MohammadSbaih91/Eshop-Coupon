@using Nop.Plugin.Misc.eShopSMS.Areas.Admin.Models

@model SmsTemplateModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="TemplateName" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.TemplateName</div>
                            <input asp-for="TemplateName" type="hidden" />
                        </div>
                    </div>
                     @(Html.LocalizedEditor<SmsTemplateModel, SmsTemplateLocalizedModel>("msgTemplate-info-localized",
                    @<div>
                         <div class="form-group">
                             <div class="col-md-3">
                                 <nop-label asp-for="@Model.Locales[item].Body" />
                             </div>
                             <div class="col-md-9">
                                 <nop-textarea asp-for="@Model.Locales[item].Body" />
                                 <span asp-validation-for="@Model.Locales[item].Body"></span>
                             </div>
                         </div>
                        <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
                    </div>
                     ,@<div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <nop-label asp-for="Body" />
                            </div>
                            <div class="col-md-9">
                                <nop-textarea asp-for="Body" />
                                <span asp-validation-for="Body"></span>
                            </div>
                        </div>
                    </div>
                    ))
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="IsActive" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="IsActive" />
                            <span asp-validation-for="IsActive"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>