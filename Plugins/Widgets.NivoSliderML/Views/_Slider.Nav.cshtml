<style>
    .nivo-nav {
        position: absolute;
        top: 42%;
        width: 100%;
        z-index: 9;
        font-size: 3rem;
    }

        .nivo-nav a {
            background: rgba(0,0,0,0.18);
            box-shadow: 0px 0px 3px -1px #ffffff;
            padding: 0 8px;
        }

            .nivo-nav a:hover {
                box-shadow: 0px 0px 4px -1px #ffffff;
                color: #ffffff;
                transition: all 0.2s;
            }

    .nivo-left {
        float: left;
    }

    .nivo-right {
        float: right;
    }

    .hide {
        display: none;
    }

    @@media all and (max-width: 1000px) {
        .nivo-nav {
            top: 40%;
            font-size: 2rem;
        }
    }
</style>
<div class="nivo-nav hide">
    <a class="nivo-left"><i class="fas fa-angle-left"></i></a>
    <a class="nivo-right"><i class="fas fa-angle-right"></i></a>
</div>
<script asp-location="Footer">
    $(window).on('load', function () {
        $('.nivo-right').on('click', function () {
            var next = $('.nivo-control.active').next('.nivo-control');
            if (!next.length) {
                next = $('.nivo-control').first();
            }
            next.click();
        });

        $('.nivo-left').on('click', function () {
            var prev = $('.nivo-control.active').prev('.nivo-control');
            if (!prev.length) {
                prev = $('.nivo-control').last();
            }
            prev.click();
        });
        $('.nivo-nav.hide').removeClass('hide');
    });
</script>